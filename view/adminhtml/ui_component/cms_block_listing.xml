<?xml version="1.0" encoding="UTF-8"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="sync">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to sync selected items?</message>
                        <title translate="true">Sync items</title>
                    </confirm>
                    <url path="cms_data_sync/action/sync">
                        <param name="type">block</param>
                    </url>
                    <type>block</type>
                    <label translate="true">Sync</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>
